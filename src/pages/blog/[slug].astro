// СЯ СТ - API endpoint
export const prerender = false;

export async function GET({ params, request }) {
  const { slug } = params;
  
  // ростой ответ для тестирования
  const html = `<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Статья ${slug} | BlondePlace</title>
</head>
<body>
    <h1>Статья: ${slug}</h1>
    <p>агружено через серверный рендеринг!</p>
    <p>URL: ${request.url}</p>
    <a href="/">а главную</a>
</body>
</html>`;

  return new Response(html, {
    status: 200,
    headers: {
      "Content-Type": "text/html; charset=utf-8",
    }
  });
}
