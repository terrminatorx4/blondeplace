	title: string;
	description?: string;
	heroImage?: string;
	keywords?: string;
	schema?: any;
}

const { 
	title, 
	description = "Экспертные советы по красоте от салона BlondePlace", 
	heroImage, 
	keywords, 
	schema
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

